<div id="user_navi">
	<ul>
		<% if logged_in? %>
		  <li>
        ようこそ、
        <% if current_user.name != "" %>
          <%= current_user.name %>
        <% else %>
          <%= current_user.email %>
        <% end %>
        さん
      </li>
			<li><%= link_to t('link.user.show'), user_path(current_user) %></li>
			<li><%= link_to t('link.session.signout'), signout_path %></li>
		<% else %>
		  <li>ようこそ、ゲストさん</li>
			<li><%= link_to t('link.session.signin'), signin_path %></li>
			<li><%= link_to t('link.session.signup'), signup_path %></li>
		<% end %>
	</ul>
</div >
