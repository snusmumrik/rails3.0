<!DOCTYPE html>
<html>
  <head>
    <title>Rails3</title>

    <%= stylesheet_link_tag :all %>
    <% if File.exist?("#{Rails.root.to_s}/public/stylesheets/alacarte/#{controller.controller_name}.css") %>
      <%= stylesheet_link_tag "alacarte/#{controller.controller_path}" %>
    <% end %>

    <%= csrf_meta_tag %>
  </head>

  <body>
    <a name="top"></a>
    <%= render "layouts/user_navi" %>
    <%= render "layouts/header" %>
    <%= render "layouts/global_navi" %>

    <div id="page">
      <div id="content">
        <p class="green"><%= flash[:notice] %></p>
        <p class="red"><%= flash[:error] %></p>
        <p><%= yield %></p>
      </div>
      <!-- end div#content -->

      <%= render "layouts/side_navi" %>
    </div>
    <!-- end div#page -->

    <%= render "layouts/footer" %>

    <%= javascript_include_tag :defaults %>
    <% if File.exist?("#{Rails.root.to_s}/public/javascripts/#{controller.controller_name}.js") %>
      <%= javascript_include_tag controller.controller_path %>
    <% end %>

    <%= render "layouts/analytics" %>
  </body>
</html>
