<!DOCTYPE html>
<html>
<head>
  <title>Rails3</title>
  <%= stylesheet_link_tag :all %>
  <% if File.exist?("#{Rails.root.to_s}/public/stylesheets/#{controller.controller_name}.css") %>
  	<%= stylesheet_link_tag controller.controller_path %>
  <% end %>

  <%= csrf_meta_tag %>
</head>

<body>

<a name="top"></a>
<%= render "layouts/user_navi" %>
<%= render "layouts/header" %>

<div id="page">
	<div id="content">
		<p style="color: green"><%= flash[:notice] %></p>
		<p style="color: red"><%= flash[:error] %></p>
		<p><%= yield %></p>
	</div>
	<!-- end div#content -->
	<%= render "layouts/sidebar" %>
</div>
<!-- end div#page -->

<%= render "layouts/footer" %>
<%= render "layouts/analytics" %>

<%= javascript_include_tag :defaults %>
<script type="text/javascript">
<!--
$(function(){
	$("img").lazyload({
		placeholder : "/images/icons/loading.gif",
		effect : "fadeIn"
	});
});
//-->
</script>

<% if File.exist?("#{Rails.root.to_s}/public/javascripts/#{controller.controller_name}.js") %>
	<%= javascript_include_tag controller.controller_path %>
<% end %>

</body>
</html>
