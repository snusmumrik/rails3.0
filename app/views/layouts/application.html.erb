<!DOCTYPE html>
<html>
<head>
  <title>Rails3</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>

  <script type="text/javascript">
  <!--
  $(function(){
  	$("img").lazyload({
  		placeholder : "/images/icons/loading.gif",
  		effect : "fadeIn"
  	});
  });
  //-->
  </script>

  <%= csrf_meta_tag %>
</head>

<body>

<a name="top"></a>
<%= render :partial => "layouts/user_navi" %>
<%= render :partial => "layouts/header" %>

<div id="page">
	<div id="content">
    <ul>
	    <% if logged_in? %>
		    <li>Logged in as:</li>
		    <li><%= link_to h(current_user.login.capitalize), user_path(current_user) %></li>
		    <ul>
		      <li><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
		      <li><%= link_to 'Change Password', change_password_path %></li>
		      <li><%= link_to 'Sign Out', signout_url %></li>
		    </ul>
		    <% if current_user.has_role?('administrator') %>
		    	<li><%= link_to 'Administer Users', users_path %></li>
		    <% end %>
	    <% else %>
		    <li><%= link_to 'Sign In', "/signin" %></li>
		    <li><%= link_to 'Sign Up', "/signup" %></li>
		    <li><%= link_to 'Forgot Password?', forgot_password_path %></li>
	    <% end %>
    </ul>
		<p style="color: green"><%= flash[:notice] %></p>
		<p style="color: red"><%= flash[:error] %></p>
		<p><%= yield %></p>
	</div>
	<!-- end div#content -->
	<%= render :partial => "layouts/sidebar" %>
</div>
<!-- end div#page -->

<% if File.exist?("#{RAILS_ROOT}/public/javascripts/#{controller.controller_name}.js") %>
	<%= javascript_include_tag controller.controller_path %>
<% end %>

<%= render :partial => "layouts/footer" %>
<%= render :partial => "layouts/analytics" %>

<% if File.exist?("#{RAILS_ROOT}/public/javascripts/#{controller.controller_name}.js") %>
	<%= javascript_include_tag controller.controller_path %>
<% end %>

</body>
</html>
